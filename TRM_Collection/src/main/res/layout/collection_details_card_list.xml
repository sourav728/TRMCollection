<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:elevation="4dp"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="5dp">

    <TableLayout
        android:id="@+id/list_table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/listviewitem"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/list_table_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/detail_rrno"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/details_acc_id"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detail_amount"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="5dp"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/detail_cancel"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/imagecancel"
                android:contentDescription="@string/select_cancel"/>

        </TableRow>
    </TableLayout>

</android.support.v7.widget.CardView>